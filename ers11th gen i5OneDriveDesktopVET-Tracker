[32m++        const newData = snapshot.docs.map(doc => ({[m
[32m++          id: doc.id,[m
[32m++          ...doc.data()[m
[32m++        }));[m
[32m++        setData(newData);[m
[32m++      },[m
[32m++      (error) => {[m
[32m++        console.error('Real-time sync error:', error);[m
[32m++        EnhancedAlert.connectionLost();[m
